<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hourly_weather_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        tools:srcCompat="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/hourly_temp_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="46dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:text="22"/>

    <TextView
        android:id="@+id/hourly_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:text="9pm"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/hourly_feels_like_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hourly_temp_textview"
        android:layout_alignEnd="@+id/hourly_temp_textview"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:text="Feels like: 25"
        android:textColor="#C3C3C3"
        android:textSize="12sp"/>
</RelativeLayout>
