<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailed_clothing_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_gradient"
    tools:context=".DetailedClothingActivity">

    <Button
        android:id="@+id/clothing_back_to_dashboard_button"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/ic_baseline_arrow_back_ios_24"
        app:iconTint="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clothing_info_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/clothing_back_to_dashboard_button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>
</RelativeLayout>